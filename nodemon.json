{
  "watch": ["server", "shared", ".env"],
  "ext": "ts,js,json",
  "ignore": ["server/**/*.test.ts", "node_modules/**", "dist/**", "client/**"],
  "exec": "tsx server/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 500,
  "signal": "SIGTERM",
  "verbose": false,
  "legacyWatch": false
}
